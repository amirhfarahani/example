<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".activity_singup_p1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/background_image"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/golden_art2" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TextView_SingUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_font_size" />

                <ImageButton
                    android:id="@+id/back_ImgBtn"
                    android:layout_width="@dimen/action_button_size"
                    android:layout_height="@dimen/action_button_size"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:background="@null"
                    android:src="@mipmap/ic_action_back_white" />
            </RelativeLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:layout_alignLeft="@+id/background_image"
                android:layout_alignRight="@+id/background_image"
                android:layout_alignBottom="@+id/background_image"
                android:layout_alignParentRight="true"

                android:layout_marginLeft="282dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/default_avatar" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="501dp"
                android:layout_below="@+id/background_image"
                android:orientation="vertical"
                android:padding="@dimen/standard_margin">

                <TextView
                    android:id="@+id/TextView_personal_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/standard_margin_x2"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:text="@string/account_information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/EditText_username_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/form_fileds_margin"
                    android:layout_marginTop="@dimen/standard_margin_x2"
                    android:layout_marginRight="@dimen/form_fileds_margin"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:hint="@string/username"
                    android:maxLength="35"
                    android:maxLines="1"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/EditText_password_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/form_fileds_margin"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_marginRight="@dimen/form_fileds_margin"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:gravity="right"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLength="35"
                    android:maxLines="1"
                    android:textSize="@dimen/normal_font_size" />


                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/form_fileds_margin"
                    android:layout_marginRight="@dimen/form_fileds_margin"
                    android:text="@string/login" />


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>